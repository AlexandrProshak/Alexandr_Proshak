    <!--MVC task-->

    <servlet>
        <servlet-name>appController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.AppController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>usersController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usersController</servlet-name>
        <url-pattern>/allUsersList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userCreateController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.UserCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userCreateController</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userUpdateController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.UserUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userUpdateController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeUserServlet</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeUserServlet</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>

    <!-- Filter security -->

    <filter>
        <filter-name>authentication</filter-name>
        <filter-class>ru.job4j.mvc.controller.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authentication</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>removeFilter</filter-name>
        <filter-class>ru.job4j.mvc.controller.filters.RemoveFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>removeFilter</filter-name>
        <url-pattern>/remove</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>editFilter</filter-name>
        <filter-class>ru.job4j.mvc.controller.filters.EditFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>editFilter</filter-name>
        <url-pattern>/edit</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>createFilter</filter-name>
        <filter-class>ru.job4j.mvc.controller.filters.CreateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>createFilter</filter-name>
        <url-pattern>/create</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>240</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>ru.job4j.mvc.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


</web-app>
